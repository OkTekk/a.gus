Accordion:
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size
            source: 'data/background.png'

    AccordionItem:
        title: 'Setup'
        collapse: False
        
        GridLayout:
            cols: 2
            
            row_force_default: True
            row_default_height: 50
            
            pos_hint: { 'center_x':.5, 'center_y':.2 }
            
            padding: 20
            spacing: 10
            
            Label:
                size_hint_x: None
                text: 'Licor 820'
                text_size: self.width, None
            Switch:
                size_hint_x: None

            Label:
                size_hint_x: None
                text: 'Licor 6262'
                text_size: self.width, None
            Switch:
                size_hint_x: None

            Label:
                size_hint_x: None
                text: 'GPS'
                text_size: self.width, None
            Switch:
                size_hint_x: None
                active: True
                            
        FloatLayout:
            Button:
                size_hint: None, None
                pos_hint: { 'center_x':.5, 'center_y':.5 }
                size: '150dp', '48dp'
                text: 'Start'

    AccordionItem:
        title: 'Live feed'

        GridLayout:
            cols: 2
            
            row_force_default: True
            row_default_height: 50
            
            pos_hint: { 'center_x':.6, 'center_y':.2 }
            
            padding: 10
            spacing: 10
            
            Label:
                text: 'Temperature (CÂ°)'
                text_size: self.width, None
                
            Label:
                text: '20.2457'
                
            Label:
                text: 'Pression (kPa)'
                text_size: self.width, None
                
            Label:
                text: '10.154772e3'
                
            Label:
                text: 'CO2 (mm/m)'
                text_size: self.width, None
                
            Label:
                text: '2.14577'
                
            Label:
                text: 'H2O (mm/m)'
                text_size: self.width, None
                
            Label:
                text: '45.05455656e4'

    AccordionItem:
        title: 'Live graph'

        BoxLayout:
            padding: 10
            spacing: 10

            pos_hint: { 'center_x':.5, 'center_y':.5 }

            Image:
                size: self.size
                source: 'data/graph.png'

